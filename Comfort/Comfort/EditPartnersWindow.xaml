<Window x:Class="Comfort.EditPartnersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Comfort"
        mc:Ignorable="d"
        Title="Окно изменения поставщиков" Height="450" Width="400" ResizeMode="NoResize" Icon="/caduceus-icon.png" WindowStartupLocation="CenterScreen">
    <Grid Background="#0D2233">
        <Button FontWeight="Bold" Foreground="#72B7BC" BorderBrush="#72B7BC" Background="#0D2233" BorderThickness="2" x:Name="AddPartnerButton" Content="Изменить" HorizontalAlignment="Center" Margin="0,0,0,80" VerticalAlignment="Bottom" Width="300" Height="30" Click="EditPartnerButton_Click"/>
        <Button FontWeight="Bold" Foreground="#72B7BC" BorderBrush="#72B7BC" Background="#0D2233" BorderThickness="2" x:Name="BackButtonMainWindow" Content="Назад" HorizontalAlignment="Center" Margin="0,350,0,30" VerticalAlignment="Bottom" Width="300" Height="30" Click="BackButtonMainWindow_Click"/>
        <TextBox x:Name="TxtType" FontWeight="Bold" Background="#0D2233" Foreground="#72B7BC" BorderBrush="#72B7BC" HorizontalAlignment="Center" Height="20" Margin="0,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <TextBox x:Name="TxtName" FontWeight="Bold" Background="#0D2233" Foreground="#72B7BC" BorderBrush="#72B7BC" HorizontalAlignment="Center" Height="20" Margin="0,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <TextBox x:Name="TxtDirector" FontWeight="Bold" Background="#0D2233" Foreground="#72B7BC" BorderBrush="#72B7BC" HorizontalAlignment="Center" Height="20" Margin="0,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <TextBox x:Name="TxtPhone" FontWeight="Bold" Background="#0D2233" Foreground="#72B7BC" BorderBrush="#72B7BC" HorizontalAlignment="Center" Height="20" Margin="0,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <TextBox x:Name="TxtRating" FontWeight="Bold" Background="#0D2233" Foreground="#72B7BC" BorderBrush="#72B7BC" HorizontalAlignment="Center" Height="20" Margin="0,205,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <Label FontWeight="Bold" Foreground="#72B7BC" Content="Тип" HorizontalAlignment="Left" Margin="46,20,0,0" VerticalAlignment="Top"/>
        <Label FontWeight="Bold" Foreground="#72B7BC" Content="Название" HorizontalAlignment="Left" Margin="46,60,0,0" VerticalAlignment="Top"/>
        <Label FontWeight="Bold" Foreground="#72B7BC" Content="Директор" HorizontalAlignment="Left" Margin="46,100,0,0" VerticalAlignment="Top"/>
        <Label FontWeight="Bold" Foreground="#72B7BC" Content="Номер телефона (без +7)" HorizontalAlignment="Left" Margin="46,140,0,0" VerticalAlignment="Top"/>
        <Label FontWeight="Bold" Foreground="#72B7BC" Content="Рейтинг" HorizontalAlignment="Left" Margin="46,180,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
